<%- include('../partials/header.ejs') %>

<main style="height: 86vh; margin-top: 54px; margin-bottom: 10px;">
  <div id="register">
  <div class="card">
    <% if (errorMessage) { %>
    <div class="user_message user_message_error"><%= errorMessage %></div>
    <% } %>
    <h1 style="color: #005c2f">Sign Up</h1> <hr>
    <form action="/signup" method="POST">
      <div class="my-3">
        <!-- <label for="username">Username:</label> -->
        <input type="text" name="username" id="username" placeholder="Username" style="border: 2px solid #02a355" />
      </div>
      <div class="my-3">
        <!-- <label for="email">Email:</label> -->
        <input type="text" name="email" id="email" placeholder="Email" style="border: 2px solid #02a355" />
      </div>
      <div class="my-3">
        <!-- <label for="password">Password:</label> -->
        <input type="password" name="password" id="password" placeholder="Password" style="border: 2px solid #02a355" />
      </div>
      <div class="my-3">
        <!-- <label for="gender">Gender:</label> -->
        <select name="gender" id="gender" class="w-100 mb-2" style="height: 45px; border-radius: 5px; border: 2px solid #02a355">
          <option>Select gender</option>
          <option value="male">male</option>
          <option value="female">female</option>
          <option value="other">other</option>
        </select>
      </div>
      <div>
        <input type="hidden" name="role" id="role" value="user" />
      </div>
      <button type="submit" class="btn btn-outline-success w-100">Signup</button>
      <a href="/" class="btn btn-outline-secondary w-100" >Back</a>
    </form>
  </div>
</main>

  <%- include('../partials/footer.ejs') %>
</div>
