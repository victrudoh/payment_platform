<%- include('../partials/header.ejs') %>

<main>
  <div id="register">
    <div class="card">
      <h1 style="color: #005c2f">Payment Summary</h1>
      <hr />
      <form action="/summary" method="POST">
        <div class="my-3">
          METER NUMBER
          <input
            type="hidden"
            name="billersCode"
            value="<%= payload.billersCode %>"
          />
          <h4 style="color: #005c2f"><%= payload.billersCode %></h4>
        </div>
        <div class="my-3">
          METER TYPE
          <input type="hidden" name="type" value="<%= payload.type %>" />
          <h4 style="color: #005c2f"><%= payload.type %></h4>
        </div>
        <div class="my-3">
          DISTRICT
          <input
            type="hidden"
            name="serviceID"
            value="<%= payload.serviceID %>"
          />
          <h4 style="color: #005c2f"><%= payload.serviceID %></h4>
        </div>
        <div class="my-3">
          PHONE NUMBER
          <input type="hidden" name="phone" value="<%= payload.phone %>" />
          <h4 style="color: #005c2f"><%= payload.phone %></h4>
        </div>
        <div class="my-3">
          AMOUNT
          <input type="hidden" name="amount" value="<%= payload.amount %>" />
          <h4 style="color: #005c2f">â‚¦<%= payload.amount %></h4>
        </div>
        <button type="submit" class="btn btn-outline-success w-100">
          complete
        </button>
        <a href="/utility/review" class="btn btn-outline-secondary w-100"
          >Back</a
        >
        <p style="text-align: center">
          By Clicking Complete, You Agree To Pay The Amount Stated Above.
        </p>
      </form>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>
