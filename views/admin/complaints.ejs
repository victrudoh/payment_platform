<%- include('../partials/header.ejs') %>

<main>
  
<div>
    <h1 style="margin-left: 35px;" class="fw-bold my-2" >Users Complaints</h1>

    <% num = 1 %>

    <table class="table table-striped table-hover mx-2">
      <tr>
        <th>S/N</th>
        <th>Username</th>
        <th>Email</th>
        <th>Complaint</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>

      <% complaints.forEach(complaint => { %>
      <tr>
        <td><%= num++ %></td>
        <input type="hidden" value="<%= complaint._id %>" name="complaint_id">
        <input type="hidden" value="<%= complaint.user %>" name="userId">
        <td><%= complaint.username %></td>
        <td><%= complaint.email %></td>
        <td><%= complaint.complaint %></td>
        <td><%= complaint.status %></td>
        <td>
          <a href="/admin/view_pending_transactions/<%= complaint.user %>" class="btn btn-outline-secondary my-1">View transactions</a>
        </td>
      </tr>
      <%  }) %>

    </table>
    <a href="/admin/dashboard" class="btn btn-outline-secondary" style="margin-left: 35px;">Back</a>
</div>


</main>

<%- include('../partials/footer.ejs') %>
